<%= form_for @giris_form, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :ilk_basvuru_tarihi, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :ilk_basvuru_tarihi, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mc_destek_aliyor, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :mc_destek_aliyor, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :iletisime_gecen, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :iletisime_gecen, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :iletisime_gecme_yolu, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :iletisime_gecme_yolu, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notlar, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :notlar, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  giris_forms_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
