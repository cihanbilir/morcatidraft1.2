<%= form_for @basvuran, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :isim, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :isim, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :soyisim, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :soyisim, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :basvuran_kod, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :basvuran_kod, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :telefon, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :telefon, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mail, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.email_field :mail, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  basvurans_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
